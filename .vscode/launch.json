    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "hello world",
            "program": "${workspaceFolder}/build/helloworld.exec",
            "env": {
                "ASAN_OPTIONS": "detect_leaks=0",
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "shed",
            "program": "${workspaceFolder}/build/shed.exec",
            "env": { "ASAN_OPTIONS": "detect_leaks=0", },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "hello_serial",
            "program": "/build/hello_serial.exec",
            "env": { "ASAN_OPTIONS": "detect_leaks=0", },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "custom",

            "name": "attach 5001",
            "targetCreateCommands": ["target create /usr/bin/bash"],
            "processCreateCommands": ["gdb-remote 127.0.0.1:5001"],
        }

    ]
}